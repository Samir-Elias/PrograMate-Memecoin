# Variables de entorno para PrograMate
# Copia este archivo a .env.local y configura los valores reales

# Configuración de la aplicación
NEXT_PUBLIC_APP_NAME=PrograMate
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_ENV=development

# Configuración de Solana
NEXT_PUBLIC_SOLANA_NETWORK=devnet
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com
NEXT_PUBLIC_SOLANA_WS_URL=wss://api.devnet.solana.com

# Configuración de pump.fun (cuando esté disponible)
NEXT_PUBLIC_PUMP_FUN_API_URL=https://api.pump.fun
NEXT_PUBLIC_PUMP_FUN_API_KEY=your_api_key_here

# Configuración de analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
NEXT_PUBLIC_GOOGLE_TAG_MANAGER_ID=GTM_ID

# Configuración de redes sociales
NEXT_PUBLIC_TELEGRAM_URL=https://t.me/programate
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/programate
NEXT_PUBLIC_DISCORD_URL=https://discord.gg/programate
NEXT_PUBLIC_GITHUB_URL=https://github.com/programate

# Configuración de la API
API_BASE_URL=http://localhost:3000/api
API_SECRET_KEY=your_secret_key_here

# Configuración de base de datos (futuro)
DATABASE_URL=your_database_url_here

# Configuración de email (futuro)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Configuración de seguridad
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Configuración de rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de caché
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Configuración de logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Configuración de monitoreo (futuro)
SENTRY_DSN=your_sentry_dsn_here
NEW_RELIC_LICENSE_KEY=your_new_relic_key_here
